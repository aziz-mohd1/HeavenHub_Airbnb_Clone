      <div class="mt-5 filter hidden md:flex justify-center items-center flex-col text-gray-500 hover:text-black border-b-2 border-white hover:border-gray-400 rounded-sm pb-4 transition-all ease-in duration-100 space-y-1 cursor-pointer">
        <i class="text-[1.4rem] fa-solid fa-person-swimming"></i>
        <p class="text-[0.8rem] text-center">Amazing Pools</p>
      </div>
      <div class="mt-5 filter hidden md:flex justify-center items-center flex-col text-gray-500 hover:text-black border-b-2 border-white hover:border-gray-400 rounded-sm pb-4 transition-all ease-in duration-100 space-y-1 cursor-pointer lg:mr-0 md:mr-5">
        <i class="text-[1.4rem] fa-solid fa-campground"></i>
        <p class="text-[0.8rem] text-center">Camping</p>
      </div>
      <div class="mt-5 filter hidden lg:flex justify-center items-center flex-col text-gray-500 hover:text-black border-b-2 border-white hover:border-gray-400 rounded-sm pb-4 transition-all ease-in duration-100 space-y-1 cursor-pointer">
        <i class="text-[1.4rem] fa-solid fa-cow"></i>
        <p class="text-[0.8rem] text-center">Farms</p>
      </div>
      <div class="mt-5 filter hidden lg:flex justify-center items-center flex-col text-gray-500 hover:text-black border-b-2 border-white hover:border-gray-400 rounded-sm pb-4 transition-all ease-in duration-100 space-y-1 cursor-pointer">
        <i class="text-[1.4rem] fa-solid fa-snowman"></i>
        <p class="text-[0.8rem] text-center">Arctic</p>
      </div>
      <div class="mt-5 filter hidden lg:flex justify-center items-center flex-col text-gray-500 hover:text-black border-b-2 border-white hover:border-gray-400 rounded-sm pb-4 transition-all ease-in duration-100 space-y-1 cursor-pointer">
        <i class="text-[1.4rem] fa-solid fa-igloo"></i>
        <p class="text-[0.8rem] text-center">Domes</p>
      </div>
      <div class="mt-5 filter hidden lg:flex justify-center items-center flex-col text-gray-500 hover:text-black border-b-2 border-white hover:border-gray-400 rounded-sm pb-4 transition-all ease-in duration-100 space-y-1 cursor-pointer">
        <i class="text-[1.4rem] fa-solid fa-ship"></i>
        <p class="text-[0.8rem] text-center">Boats</p>
      </div>

    </div>

    <div class="mt-2 md:mt-4 md:w-[17.5rem] w-full h-full ms-auto border hover:border-black p-3 rounded-2xl mb-4 flex justify-center items-center ">
      <label class="cursor-pointer flex justify-center items-center space-x-2">
        <span class="ms-3 text-sm font-medium text-gray-900 text-[0.8rem]">Display total before taxes</span>
        <input type="checkbox" value="" class="sr-only peer">
        <div class="toggleBtn relative w-11 h-6 rounded-full bg-gray-400 hover:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:w-5 after:h-5 after:transition-all peer-checked:bg-[#FF385C]"></div>
      </label>
    </div>
  </div>
  
  <!-- creating cards for each listing -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 place-items-center">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="w-full">
        <div class="card max-w-[30rem] max-h-[30rem] rounded-lg">
          <img src="<%= listing.image.url %>" alt="Listing Image" class="rounded-lg w-full h-[18rem] bg-cover hover:opacity-[0.75] transition-opacity duration-300" />
          <div class="card-body pt-3">
            <p class="text-md font-semibold"><%= listing.title %></p>
            <p class="text-gray-600">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night <i class="gst hidden"> &nbsp; +18% GST</i></p>
            
          </div>
        </div>
      </a>
    <% } %>
    <div class="mb-10"></div>
  </div>
</body>

<script>
  
  let toggleButton = document.querySelector(".toggleBtn").addEventListener("click", ()=>{
    let taxInfo = document.querySelectorAll(".gst").forEach(info => {
      (info.classList.contains("hidden")) ? info.classList.remove("hidden") : info.classList.add("hidden");
    });
    
  })

</script>